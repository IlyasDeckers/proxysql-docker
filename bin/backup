#!/bin/bash
LOCKFILE=/tmp/backup.lock

. /etc/.env
. /opt/proxysql/functions

if ( set -o noclobber; echo "$$" > "$LOCKFILE") 2> /dev/null;
then
    trap 'rm -f "$LOCKFILE"; exit $?' INT TERM EXIT

    # Main loop
    while true; do
        create_backup;
        echo "Backup successfull"
        sleep 60m
    done

    rm -f "$LOCKFILE"
    trap - INT TERM EXIT
else
    out "Already running"
    exit 1
fi
