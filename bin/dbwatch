#!/bin/bash

LOCKFILE=/tmp/cluster.lock

. /etc/.env
. /opt/proxysql/functions

if ( set -o noclobber; echo "$$" > "$LOCKFILE") 2> /dev/null;
then
	trap 'rm -f "$LOCKFILE"; exit $?' INT TERM EXIT

		bootstrap_nodes;

	while true; do
		remove_etcd_keys;
		echo "Updating the serverlist"
		update_serverlist
		sleep ${DISCOVERY_SLEEP}
	done

    rm -f "$LOCKFILE"
    trap - INT TERM EXIT
else
    echo "Already running"
    exit 1
fi